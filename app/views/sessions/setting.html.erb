<h1>Change your password</h1>
<%= flash[:notice] %>
<%= form_tag(:action => 'change_password') do %>
    <p>Username or Email:</br> <%= text_field_tag(:username_or_email) %></p>
    <p>Old password:</br> <%= password_field_tag (:login_password) %></p>
    <p>New password:</br> <%= password_field_tag (:login_new_password) %></p>
    <p>New password:</br> <%= password_field_tag (:login_new_password) %></p>
    <%= submit_tag("Make change") %>
<% end %>